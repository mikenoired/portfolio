generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Image {
  id           Int    @id @unique @default(autoincrement())
  url          String @unique
  caption      String
  size         String
  type         String
  lastModified String
}

model Work {
  title     String
  url       String   @unique
  thumbnail String
  images    String[]
}

model AnswerBlock {
  id      Int    @id @unique @default(autoincrement())
  title   String
  content String
}

model SiteThumbnail {
  id    Int    @id @unique @default(autoincrement())
  media String
}

model SocLink {
  id           Int         @id @unique @default(autoincrement())
  name         String
  url          String
  PersonCard   PersonCard? @relation(fields: [personCardId], references: [id])
  personCardId Int?        @default(1)
}

model PersonCard {
  id        Int         @id @unique @default(autoincrement())
  avatar    String
  name      String
  job       String
  place     String
  socials   SocLink[]
  AboutPage AboutPage[]
}

model AboutPage {
  id       Int        @id @unique @default(autoincrement())
  personId Int        @default(1)
  person   PersonCard @relation(fields: [personId], references: [id])
  content  String
}
