generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WorkImage {
  id       Int    @id @unique @default(autoincrement())
  url      String
  caption  String
  workPage Work   @relation(fields: [url], references: [url])
}

model Work {
  title     String
  url       String      @unique
  thumbnail String
  images    WorkImage[]
}

model AnswerBlock {
  id      Int    @id @unique @default(autoincrement())
  title   String
  content String
}
